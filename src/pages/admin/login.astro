---
export const prerender = false;
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout title="Acceso Administrativo | BiblioFlow" noindex={true}>
  <div class="min-h-[80vh] flex items-center justify-center">
    <div class="w-full max-w-md bg-paper-surface p-8 rounded-sm shadow-xl border border-brand-ink/10">
      <h1 class="font-serif text-2xl font-bold text-brand-ink mb-6 text-center">
        Acceso Admin
      </h1>

      <form class="space-y-4" id="login-form">
        <div>
          <label for="email" class="block text-sm font-bold text-brand-ink mb-1">Email</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required
            class="w-full bg-paper-base border border-brand-ink/20 rounded-sm px-4 py-2 focus:outline-none focus:border-accent-gold"
          />
        </div>

        <div>
          <label for="password" class="block text-sm font-bold text-brand-ink mb-1">Contraseña</label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            required
            class="w-full bg-paper-base border border-brand-ink/20 rounded-sm px-4 py-2 focus:outline-none focus:border-accent-gold"
          />
        </div>

        <div id="error-msg" class="text-red-600 text-sm hidden bg-red-50 p-2 rounded-sm border border-red-100"></div>

        <button 
          type="submit"
          class="w-full bg-brand-ink text-white font-bold py-3 rounded-sm hover:bg-ink-deep transition-colors flex justify-center"
        >
          <span id="btn-text">Ingresar</span>
          <div id="spinner" class="hidden animate-spin ml-2 h-5 w-5 border-2 border-white/30 border-t-white rounded-full"></div>
        </button>
      </form>
    </div>
  </div>

  <script>
    import { supabase } from '@lib/supabase';

    const form = document.getElementById('login-form') as HTMLFormElement;
    const errorMsg = document.getElementById('error-msg');
    const btnText = document.getElementById('btn-text');
    const spinner = document.getElementById('spinner');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // UI Loading
      errorMsg?.classList.add('hidden');
      btnText?.classList.add('hidden');
      spinner?.classList.remove('hidden');

      const formData = new FormData(form);
      const email = formData.get('email') as string;
      const password = formData.get('password') as string;

      // Login con Supabase
      const { data, error } = await supabase.auth.signInWithPassword({
        email,
        password
      });

      if (error) {
        if (errorMsg) {
            errorMsg.textContent = "Credenciales incorrectas.";
            errorMsg.classList.remove('hidden');
        }
        btnText?.classList.remove('hidden');
        spinner?.classList.add('hidden');
      } else {
        // Guardamos la sesión en cookie (para el middleware de Astro)
        // NOTA: Esto es básico. Para producción robusta, usaríamos cookies httpOnly del lado del servidor.
        // Por ahora, redirigimos y dejamos que el cliente maneje la sesión.
        document.cookie = `sb-access-token=${data.session.access_token}; path=/; max-age=3600; SameSite=Lax; Secure`;
        document.cookie = `sb-refresh-token=${data.session.refresh_token}; path=/; max-age=3600; SameSite=Lax; Secure`;
        
        window.location.href = "/admin/dashboard";
      }
    });
  </script>
</BaseLayout>
